<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_height="wrap_content"
    tools:context=".dialog.DialogPatientFirstLogin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtPFBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_back_dark"
            android:drawablePadding="5dp"
            android:fontFamily="@font/seguisb"
            android:text="@string/extra_details"
            android:textColor="#212121"
            android:textSize="20sp"
            app:drawableTint="@color/colorAccent" />

        <EditText
            android:id="@+id/etSosMobile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:drawableLeft="@drawable/ic_call_black_24dp"
            android:drawablePadding="5dp"
            android:drawableTint="@color/colorAccent"
            android:ems="10"
            android:fontFamily="@font/seguisb"
            android:hint="Enter SOS Mobile No."
            android:inputType="number"
            android:maxLength="10"
            android:padding="10dp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="#707070"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtPFSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_acc_fill"
            android:fontFamily="@font/seguisb"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:text="Save"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>