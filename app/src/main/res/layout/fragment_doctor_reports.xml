<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.DoctorReportsFragment">

    <TextView
        android:id="@+id/txtNewReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/seguisb"
        android:padding="10dp"
        android:text="@string/patient_reports"
        android:textColor="#212121"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/llNoReportDoctor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txtNewReport"
        android:gravity="center"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:riv_corner_radius="20dp"
            android:layout_gravity="center"
            android:src="@drawable/in_app_logo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/seguisb"
            android:gravity="center"
            android:text="@string/no_reports_found" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llReportDoctor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txtNewReport"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerReportDoctor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp" />
    </LinearLayout>

</RelativeLayout>